<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/serviceName"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="14dp"
            android:gravity="start|center"
            android:padding="5dp"
            android:text="RCT"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/serviceCost"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/serviceName"
            android:layout_marginBottom="14dp"
            android:layout_marginTop="5dp"
            android:gravity="start|center"
            android:padding="5dp"
            android:text="@string/rs"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/serviceCost1"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_alignTop="@+id/serviceCost"
            android:layout_toEndOf="@+id/serviceCost"
            android:gravity="start|center"

            android:text="4000"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/serviceMore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/serviceName"
            android:layout_marginEnd="20dp"
            android:src="@drawable/more_option" />


    </RelativeLayout>

</android.support.v7.widget.CardView>